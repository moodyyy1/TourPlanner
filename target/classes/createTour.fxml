<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mudi.ramiz.tourplanner.controller.CreateTourController">
    <children>
        <HBox prefHeight="400.0" prefWidth="800.0">
            <children>
                <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="30.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create Your Own New Tour">
                            <font>
                                <Font name="Beirut Regular" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </Text>
                        <Text lineSpacing="10.0" strokeType="OUTSIDE" strokeWidth="0.0" text="You got an amazing trip ahead?   Share with other travellers your experience, tell us where your journey starts, where it ends and everything in between! " wrappingWidth="200.0" VBox.vgrow="ALWAYS">
                            <font>
                                <Font name="Beirut Regular" size="12.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Text>
                        <Text lineSpacing="10.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Describe your tour and give other travellers what you are planning to do on your trip. Tell them where you start and what your destination is. Are you travelling by car or are you interrailling?" wrappingWidth="200.0">
                            <font>
                                <Font name="Beirut Regular" size="12.0" />
                            </font>
                        </Text>
                    </children>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="200.0" />
                <VBox prefHeight="200.0" prefWidth="550.0" spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tell Us About Your Tour">
                            <font>
                                <Font name="Beirut Regular" size="18.0" />
                            </font>
                        </Text>
                        <Separator />
                        <Label text="Tour Name" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="-10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="tourName" />
                        <Label text="Description">
                            <VBox.margin>
                                <Insets bottom="-10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="tourDescription" />
                        <HBox spacing="20.0">
                            <children>
                                <VBox prefWidth="200.0" spacing="5.0">
                                    <children>
                                        <Label text="From" />
                                        <TextField fx:id="tourFrom" />
                                    </children>
                                </VBox>
                                <VBox prefWidth="200.0" spacing="5.0">
                                    <children>
                                        <Label text="To" />
                                        <TextField fx:id="tourTo" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <Label text="Transport Type">
                            <padding>
                                <Insets bottom="-10.0" />
                            </padding>
                        </Label>
                        <TextField fx:id="transportType" />
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveTour" text="Save Tour" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="75.0" right="75.0" top="15.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</Pane>